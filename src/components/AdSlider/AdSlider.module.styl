// src/components/AdSlider/AdSlider.module.styl
.sliderContainer
  position: relative
  width: 100%
  height: 500px
  overflow: hidden

.slider
  display: flex
  width: 100%
  height: 100%
  transition: transform 0.5s ease-in-out

.slide
  min-width: 100%
  position: relative
  
  img
    width: 100%
    height: 100%
    object-fit: cover
    filter: brightness(0.7)

.slideContent
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 80%
  max-width: 800px
  text-align: center
  color: white
  
  h2
    font-size: 2.5rem
    font-weight: bold
    margin-bottom: 0.5rem
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3)
  
  p
    font-size: 1.25rem
    margin-bottom: 1.5rem
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3)
  
  .cta
    padding: 0.75rem 1.5rem
    background: #3b82f6
    color: white
    border: none
    border-radius: 4px
    font-weight: 500
    cursor: pointer
    transition: background 0.2s
    
    &:hover
      background: #2563eb

.indicators
  position: absolute
  bottom: 1.5rem
  left: 50%
  transform: translateX(-50%)
  display: flex
  gap: 0.5rem
  z-index: 10

.indicator
  width: 10px
  height: 10px
  border-radius: 50%
  background: rgba(255, 255, 255, 0.5)
  border: none
  cursor: pointer
  padding: 0
  
  &.active
    background: white
    transform: scale(1.2)

// Media Queries
@media (max-width: 768px)
  .sliderContainer
    height: 400px
    
  .slideContent
    h2
      font-size: 2rem
      
    p
      font-size: 1rem

@media (max-width: 480px)
  .sliderContainer
    height: 350px
    
  .slideContent
    h2
      font-size: 1.5rem
      
    p
      font-size: 0.875rem
      
    .cta
      padding: 0.5rem 1rem
      font-size: 0.875rem